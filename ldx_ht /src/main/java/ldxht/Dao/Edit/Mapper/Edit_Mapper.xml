<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ldxht.Dao.Edit.Edit_Dao">

    <update id="edit_tell">
        UPDATE TABLE db_tell_table
        SET message=#{message}
        WHERE id=1
    </update>

    <select id="sel_tell" resultType="java.lang.String">
        SELECT message FROM db_tell_table where id=1
    </select>
</mapper>